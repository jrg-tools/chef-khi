---
import { TITLE } from '@/lib/constants';
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from '@clerk/astro/components';
import BooksSelector from '@/components/BooksSelector';

interface Props {
  isStatic: boolean;
  title?: string;
}
const { title = TITLE, isStatic } = Astro.props;
---

<header id="header-nav" class="fixed top-0 z-50 w-full px-6 py-4 select-none">
  <div class="mx-auto flex max-w-7xl items-center justify-between gap-16">
    <div class="relative z-10 flex flex-row items-center gap-2">
      <img src="/logo.webp" loading="lazy" class="w-9" alt="Logo" />
      <SignedOut isStatic={isStatic}>
        <a href="/" class="cursor-pointer">
          <h2 class="text-xl font-bold whitespace-nowrap">
            {title}
          </h2>
        </a>
      </SignedOut>
      <SignedIn isStatic={isStatic}>
        <BooksSelector client:load />
      </SignedIn>
    </div>

    <nav class="flex items-center gap-4">
      <SignedOut isStatic={isStatic}>
        <SignInButton mode="modal" class="cursor-pointer font-bold" />
      </SignedOut>
      <SignedIn isStatic={isStatic}>
        <UserButton />
      </SignedIn>
    </nav>
  </div>
</header>
